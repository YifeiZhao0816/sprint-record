
@using SprintRecord.Models
@using SprintRecord.Services
@using Microsoft.AspNetCore.Components.Web
@inject JsonTeamService teamService

<style>
    table, td, th {
        border: 1px solid black;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    .button {
        background-color: #525288;
        border: none;
        color: white;
        padding: 10px 22px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 8px 4px;
        cursor: pointer;
    }

    .div {
        display: inline-flex;
    }

    .div div {
        flex: auto
    }

    .card{
        border-color: #525288;
    }

    .input[type=button]{
        background-color:white;
        border: 2px,solid,#954416
    }
</style>

<button class="button" @onclick="e => showNewTeamPanel()">Add Team</button>
<div></div>
@if (showNewTeam)
{
    <div class="div" >
        <div>
            <h6>Team name:</h6>
            <input type="text" id="name" @bind="teamName" />

            <h6>Members: </h6>
            @if (memberNames != null)
            {
                foreach (string name in memberNames)
                {
                    <h6>@name</h6>
                }
            }
            <input type="button" @onclick="e => showNewMemberPanel()" value="Add Member" />

            @if (showNewMember)
            {
                <input type="text" name="memName" placeholder="Member Name..." @bind="memName" />
                <input type="button" value="Add" @onclick="e => addMember()" />
            }
            <input value="Add this team" @onclick="e=>addTeam()" type="button" />
        </div>
    </div>
}


<div class="card-columns">
    @foreach (var team in teamService.GetTeams())
    {
        <div class="card">
            <div class="card-body">
                <div class="card-text">Team:</div>
                <h4 class="card-title ">@team.Name</h4>
                @if (team.TotalWorkHrs == int.MinValue)
                {
                    <div class="card-text">This is a new team</div>
                }
                else
                {
                    <table>
                        <tr>
                            <th>Sprint period</th>
                            <th>Team Capacity</th>
                            <th>Points Added</th>
                        </tr>
                        @foreach (var sprint in team.Sprints)
                        {

                        }
                    </table>
                    <button @onclick="(e => selectTeam(team.Name))" class="button">see details</button>
                }
            </div>
        </div>
    }


</div>

@if (detailedTeam != null)
{
    <h3>@detailedTeam.Name</h3>
    <div><h6>Average Velocity:</h6><h6>@detailedTeam.AvgVelocity</h6></div>
    <div><h6>Total Sprint Hours:</h6><h6>@detailedTeam.TotalSprintHrs</h6></div>
    <div><h6>Sprint Percent:</h6><h6>@detailedTeam.SprintPercent</h6></div>
    <h5>    Sprints:</h5>
}

@code{
    IEnumerable<string> memberNames;
    Team detailedTeam;
    bool showDetail = false;
    bool showNewTeam = false;
    bool showNewMember = false;
    string memName;
    string teamName;
    int totalHrs = 0;

    void selectTeam(string teamname)
    {
        detailedTeam = teamService.GetTeams().First(x => x.Name == teamname);
    }

    void showNewTeamPanel()
    {
        showNewTeam = !showNewTeam;
    }

    void showNewMemberPanel()
    {
        showNewMember = !showNewMember;
    }

    void addMember()
    {
        if (memberNames == null)
        {
            memberNames = new List<string>();
        }
        memberNames = memberNames.Append(memName);
    }

    void addTeam()
    {
        var teams = teamService.GetTeams();
        teams.Append(new Team(teamName, memberNames));
        teamService.StoreTeamsData(teams);
    }
}
