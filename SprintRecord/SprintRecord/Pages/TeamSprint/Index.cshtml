    <tbody>
@foreach (var item in Model.TeamSprint) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sprintid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teamid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carryover)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pointsadded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Completed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commitment)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
