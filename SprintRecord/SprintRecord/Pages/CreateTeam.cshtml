@page
@model SprintRecord.CreateTeamModel
@{
    ViewData["Title"] = "CreateTeam";
}

<h1>Create Team</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewTeam.Name" class="control-label"></label>
                <input asp-for="NewTeam.Name" class="form-control" />
                <span asp-validation-for="NewTeam.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

